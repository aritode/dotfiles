[user]
  name = Philipe Fatio
  email = me@phili.pe
  signkey = F74418A0
[core]
  editor = vim -f
  quotepath = false
  excludesfile = ~/.gitignore_global
[color]
  ui = true
[alias]
  authors = log --format='%aN <%aE>'
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  last = log -n1 --decorate=short --abbrev-commit --format=fuller
  s = status -sb
  d = diff
  wd = diff --word-diff
  co = checkout
  ri = rebase --interactive --autosquash
  stapulpo = !git stash -u && git pull && git stash pop
  pullsh = !git pull && git push
[gui]
  fontdiff = -family Menlo -size 11 -weight normal -slant roman -underline 0 -overstrike 0
[pull]
  rebase = preserve
[push]
  default = upstream
[help]
  autocorrect = 1
[branch]
  autosetuprebase = always
[web]
  browser = open
[difftool]
  prompt = false
[diff]
  tool = vimdiff
[mergetool]
  prompt = false
  keepBackup = false
[merge]
  ff = no
  tool = vimdiff
[init]
  templatedir = ~/.git_template
[github]
  user = fphilipe

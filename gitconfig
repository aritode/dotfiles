[alias]
  co = checkout
  d = diff
  dw = diff --word-diff
  dc = diff --cached
  last = log -n1 --decorate=short --abbrev-commit --format=fuller
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  lm = log --first-parent --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative  master
  pushu = push -u origin HEAD
  ri = rebase --interactive
  ru = rebase @{u}
  s = status -sb
[branch]
  autosetuprebase = always
  autosetupmerge = false
[color]
  ui = true
[core]
  editor = vim -f
  excludesfile = ~/.gitignore_global
  quotepath = false
  hooksPath = ~/.githooks
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[github]
  user = fphilipe
[gui]
  fontdiff = -family Menlo -size 11 -weight normal -slant roman -underline 0 -overstrike 0
[help]
  autocorrect = 1
[merge]
  ff = no
  tool = vimdiff
[mergetool]
  keepBackup = false
  prompt = false
[pull]
  rebase = preserve
[push]
  default = upstream
[rebase]
  autosquash = true
  autostash = true
